<% layout('layout2') %>

<div id="wrapper">

    <% include ../partials/sidebar %>


    <div id="page-content-wrapper">
      
       <% include ../partials/navbar %>
       
        <div class="container-fluid main_body">
              
            <div class="ul_links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                    <li><a href="/courses">Course</a></li> |
                    <li><a href="#">Register Course</a></li>
                </ul>
            </div>
            <br>
           
           
            <div class="bodyDiv">
                <% if(noErrors) {%>
                    <div class="alert alert-success">
                       <a href="#" class="close" data-dismiss="alert" aria-label="close">
                           &times;
                       </a>
                       <%= success %>

                    </div>
                <% } %>
               
                <h4>Register Course</h4>
                
                <form method="POST" action="/course/create">

                    <div class="form-group ">
                        <label for="">Course Name</label>
                        <span id="errorMsg1"></span>
                        <input id="name" class="form-control" name="name" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Room</label>
                        <span id="errorMsg2"></span>
                        <input id="room" class="form-control" name="room" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Professor</label>
                        <span id="errorMsg3"></span>
                        <input id="prof" class="form-control" name="prof" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Credit</label>
                        <span id="errorMsg4"></span>
                        <input id="credit" class="form-control" name="credit" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Semester</label>
                        <span id="errorMsg5"></span>
                        <input id="semester" class="form-control" name="semester" type="text" style="margin-bottom:20px;">
                    </div>
                    
                    <div class="form-group ">
                        <label for="">AM or PM</label>
                        <span id="errorMsg6"></span>
                        <input id="time" class="form-control" name="time" type="text" style="margin-bottom:20px;">
                    </div>

                
                    <div class="form-group ">
                        <label for="">Course Image</label><br>
                        
                        <button class="btn btn-lg" type="button" data-toggle="modal" data-target="#file">Add File</button>
                        <span id="completed"></span>
                        
                        <div id="file" class="modal" tabindex="-1" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" id="close" class="close" data-dismiss="modal">&times;</button>
                                        <div class="modal-title">Upload Image</div>
                                    </div>
                                    
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar"></div>
                                            </div>
                                            
                                            <button class="btn btn-lg upload-btn" type="button">Upload File</button>
                                            <input type="file" class="form-control" name="upload" id="upload-input" style="display:none">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>


                    <div class="form-group">
                        <input type="submit" id="register" value="Register" class="form-control btn btn-primary" name="register" style="">
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>

<script src="/js/validate.js"></script>